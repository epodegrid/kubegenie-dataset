[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "labels": {
        "app.kubernetes.io/name": "version-checker",
        "helm.sh/chart": "version-checker-0.2.3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.2.1",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "name": "version-checker"
    }
  },
  {
    "kind": "ClusterRole",
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "metadata": {
      "labels": {
        "app.kubernetes.io/name": "version-checker",
        "helm.sh/chart": "version-checker-0.2.3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.2.1",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "name": "version-checker"
    },
    "rules": [
      {
        "apiGroups": [
          ""
        ],
        "resources": [
          "pods"
        ],
        "verbs": [
          "get",
          "list",
          "watch"
        ]
      }
    ]
  },
  {
    "kind": "ClusterRoleBinding",
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "metadata": {
      "labels": {
        "app.kubernetes.io/name": "version-checker",
        "helm.sh/chart": "version-checker-0.2.3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.2.1",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "name": "version-checker"
    },
    "roleRef": {
      "apiGroup": "rbac.authorization.k8s.io",
      "kind": "ClusterRole",
      "name": "version-checker"
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "version-checker",
        "namespace": "default"
      }
    ]
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "version-checker",
      "labels": {
        "app": "version-checker",
        "app.kubernetes.io/name": "version-checker",
        "helm.sh/chart": "version-checker-0.2.3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.2.1",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "ports": [
        {
          "port": 8080,
          "targetPort": 8080,
          "protocol": "TCP",
          "name": "web"
        }
      ],
      "selector": {
        "app": "version-checker"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "version-checker",
      "labels": {
        "app.kubernetes.io/name": "version-checker",
        "helm.sh/chart": "version-checker-0.2.3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.2.1",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "version-checker"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "version-checker"
          },
          "annotations": {
            "prometheus.io/path": "/metrics",
            "prometheus.io/scrape": "true",
            "prometheus.io/port": "8080",
            "enable.version-checker.io/version-checker": "true"
          }
        },
        "spec": {
          "serviceAccountName": "version-checker",
          "containers": [
            {
              "name": "version-checker",
              "image": "quay.io/jetstack/version-checker:v0.2.1",
              "imagePullPolicy": "IfNotPresent",
              "ports": [
                {
                  "containerPort": 8080
                }
              ],
              "command": [
                "version-checker"
              ],
              "args": [
                "--image-cache-timeout=30m",
                "--log-level=info",
                "--metrics-serving-address=0.0.0.0:8080",
                "--test-all-containers=true"
              ],
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "env": null
            }
          ],
          "volumes": null
        }
      }
    }
  }
]