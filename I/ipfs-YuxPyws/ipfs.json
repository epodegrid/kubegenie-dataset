[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-ipfs",
      "labels": {
        "app": "ipfs",
        "chart": "ipfs-0.2.2",
        "heritage": "Helm",
        "release": "release-name"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 5001,
          "targetPort": 5001,
          "protocol": "TCP",
          "name": "api"
        },
        {
          "port": 8080,
          "targetPort": 8080,
          "name": "gateway"
        }
      ],
      "selector": {
        "app": "ipfs",
        "release": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1beta1",
    "kind": "StatefulSet",
    "metadata": {
      "name": "release-name-ipfs",
      "labels": {
        "app": "ipfs",
        "chart": "ipfs-0.2.2",
        "heritage": "Helm",
        "release": "release-name"
      }
    },
    "spec": {
      "replicas": 1,
      "serviceName": "release-name-ipfs",
      "template": {
        "metadata": {
          "labels": {
            "app": "ipfs",
            "chart": "ipfs-0.2.2",
            "heritage": "Helm",
            "release": "release-name"
          }
        },
        "spec": {
          "securityContext": {
            "fsGroup": 1000,
            "runAsUser": 1000
          },
          "containers": [
            {
              "name": "ipfs",
              "image": "ipfs/go-ipfs:v0.4.9",
              "ports": [
                {
                  "containerPort": 5001,
                  "name": "api"
                },
                {
                  "containerPort": 8080,
                  "name": "gateway"
                }
              ],
              "volumeMounts": [
                {
                  "name": "ipfs-storage",
                  "mountPath": "/data/ipfs"
                }
              ],
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ]
        }
      },
      "volumeClaimTemplates": [
        {
          "metadata": {
            "name": "ipfs-storage"
          },
          "spec": {
            "accessModes": [
              "ReadWriteOnce"
            ],
            "resources": {
              "requests": {
                "storage": "8Gi"
              }
            }
          }
        }
      ]
    }
  }
]