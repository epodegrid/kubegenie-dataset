[
  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "ibm-powervc-config",
      "labels": {
        "app": "ibm-powervc-k8s-volume-driver",
        "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "data": {
      "OS_AUTH_URL": "https://:5000/v3/",
      "OS_DOMAIN_NAME": "Default",
      "OS_PROJECT_NAME": "ibm-default"
    }
  },
  {
    "apiVersion": "storage.k8s.io/v1",
    "kind": "StorageClass",
    "metadata": {
      "name": "ibm-powervc-k8s-volume-default",
      "labels": {
        "app": "ibm-powervc-k8s-volume-driver",
        "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
        "release": "release-name",
        "heritage": "Helm"
      },
      "annotations": {
        "storageclass.kubernetes.io/is-default-class": "true"
      }
    },
    "provisioner": "ibm/powervc-k8s-volume-provisioner"
  },
  {
    "apiVersion": "apps/v1beta2",
    "kind": "DaemonSet",
    "metadata": {
      "name": "ibm-powervc-k8s-volume-flex",
      "labels": {
        "app": "ibm-powervc-k8s-volume-flex",
        "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "app": "ibm-powervc-k8s-volume-flex"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "ibm-powervc-k8s-volume-flex",
            "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
            "release": "release-name",
            "heritage": "Helm"
          },
          "annotations": {
            "productName": "ibm-powervc-k8s-volume-driver",
            "productID": "ibm-powervc-k8s-volume-driver_1.0.1_apache_00000",
            "productVersion": "1.0.1"
          }
        },
        "spec": {
          "hostPID": false,
          "hostIPC": false,
          "hostNetwork": false,
          "securityContext": {
            "fsGroup": 1000
          },
          "tolerations": [
            {
              "key": "dedicated",
              "operator": "Exists",
              "effect": "NoSchedule"
            }
          ],
          "affinity": {
            "nodeAffinity": {
              "requiredDuringSchedulingIgnoredDuringExecution": {
                "nodeSelectorTerms": [
                  {
                    "matchExpressions": [
                      {
                        "key": "beta.kubernetes.io/arch",
                        "operator": "In",
                        "values": [
                          "ppc64le"
                        ]
                      }
                    ]
                  },
                  {
                    "matchExpressions": [
                      {
                        "key": "role",
                        "operator": "In",
                        "values": [
                          "master"
                        ]
                      },
                      {
                        "key": "beta.kubernetes.io/arch",
                        "operator": "In",
                        "values": [
                          "amd64"
                        ]
                      }
                    ]
                  }
                ]
              }
            }
          },
          "serviceAccountName": "default",
          "containers": [
            {
              "name": "ibm-powervc-k8s-volume-flex",
              "image": "ibmcom/power-openstack-k8s-volume-flex:1.0.0",
              "imagePullPolicy": "IfNotPresent",
              "args": [
                "powervc-k8s"
              ],
              "envFrom": [
                {
                  "configMapRef": {
                    "name": "ibm-powervc-config"
                  }
                },
                {
                  "secretRef": {
                    "name": null
                  }
                }
              ],
              "volumeMounts": [
                {
                  "name": "flex-driver-dir",
                  "mountPath": "/flex-mount-dir"
                }
              ],
              "securityContext": {
                "capabilities": {
                  "drop": [
                    "all"
                  ],
                  "add": []
                },
                "allowPrivilegeEscalation": false,
                "readOnlyRootFilesystem": true,
                "runAsNonRoot": false,
                "runAsUser": 0,
                "privileged": false
              }
            }
          ],
          "terminationGracePeriodSeconds": 1,
          "volumes": [
            {
              "name": "flex-driver-dir",
              "hostPath": {
                "path": "/usr/libexec/kubernetes/kubelet-plugins/volume/exec/"
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "apps/v1beta2",
    "kind": "Deployment",
    "metadata": {
      "name": "ibm-powervc-k8s-volume-provisioner",
      "labels": {
        "app": "ibm-powervc-k8s-volume-provisioner",
        "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "ibm-powervc-k8s-volume-provisioner"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "ibm-powervc-k8s-volume-provisioner",
            "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
            "release": "release-name",
            "heritage": "Helm"
          },
          "annotations": {
            "productName": "ibm-powervc-k8s-volume-driver",
            "productID": "ibm-powervc-k8s-volume-driver_1.0.1_apache_00000",
            "productVersion": "1.0.1"
          }
        },
        "spec": {
          "hostPID": false,
          "hostIPC": false,
          "hostNetwork": false,
          "securityContext": {
            "fsGroup": 1000
          },
          "nodeSelector": {
            "role": "master"
          },
          "tolerations": [
            {
              "key": "dedicated",
              "operator": "Exists",
              "effect": "NoSchedule"
            }
          ],
          "affinity": {
            "nodeAffinity": {
              "requiredDuringSchedulingIgnoredDuringExecution": {
                "nodeSelectorTerms": [
                  {
                    "matchExpressions": [
                      {
                        "key": "beta.kubernetes.io/arch",
                        "operator": "In",
                        "values": [
                          "ppc64le",
                          "amd64"
                        ]
                      }
                    ]
                  }
                ]
              }
            }
          },
          "serviceAccountName": "default",
          "containers": [
            {
              "name": "ibm-powervc-k8s-volume-provisioner",
              "image": "ibmcom/power-openstack-k8s-volume-provisioner:1.0.0",
              "imagePullPolicy": "IfNotPresent",
              "args": [
                "-prefix=powervc-k8s"
              ],
              "envFrom": [
                {
                  "configMapRef": {
                    "name": "ibm-powervc-config"
                  }
                },
                {
                  "secretRef": {
                    "name": null
                  }
                }
              ]
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "ibm-powervc-k8s-volume-driver-test",
      "labels": {
        "app": "ibm-powervc-k8s-volume-driver-test",
        "chart": "ibm-powervc-k8s-volume-driver-1.0.1",
        "release": "release-name",
        "heritage": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test-success"
      }
    },
    "spec": {
      "nodeSelector": {
        "role": "master"
      },
      "tolerations": [
        {
          "key": "dedicated",
          "operator": "Exists",
          "effect": "NoSchedule"
        }
      ],
      "affinity": {
        "nodeAffinity": {
          "requiredDuringSchedulingIgnoredDuringExecution": {
            "nodeSelectorTerms": [
              {
                "matchExpressions": [
                  {
                    "key": "beta.kubernetes.io/arch",
                    "operator": "In",
                    "values": [
                      "ppc64le",
                      "amd64"
                    ]
                  }
                ]
              }
            ]
          }
        }
      },
      "containers": [
        {
          "name": "ibm-powervc-k8s-volume-driver-test",
          "image": "busybox:1",
          "env": [
            {
              "name": "TEST_AUTH_URL",
              "value": "https://POWERVC_ADDR:5000/v3/"
            }
          ],
          "command": [
            "sh",
            "-c",
            "(ls /flex-mount-dir/ibm~powervc-k8s-volume-flex/powervc-k8s-volume-flex.crt) && (grep $TEST_AUTH_URL /etc/config/authurl.txt)"
          ],
          "volumeMounts": [
            {
              "name": "powervc-config",
              "mountPath": "/etc/config"
            },
            {
              "name": "flex-driver-dir",
              "mountPath": "/flex-mount-dir"
            }
          ]
        }
      ],
      "volumes": [
        {
          "name": "powervc-config",
          "configMap": {
            "name": "ibm-powervc-config",
            "items": [
              {
                "key": "OS_AUTH_URL",
                "path": "authurl.txt"
              }
            ]
          }
        },
        {
          "name": "flex-driver-dir",
          "hostPath": {
            "path": "/usr/libexec/kubernetes/kubelet-plugins/volume/exec/"
          }
        }
      ],
      "restartPolicy": "Never"
    }
  }
]