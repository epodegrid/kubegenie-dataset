    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "frontend-external",
      "namespace": "ns-aforo255"
    },
    "spec": {
      "type": "LoadBalancer",
      "selector": {
        "app": "frontend"
      },
      "ports": [
