  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-pyrra",
      "labels": {
        "helm.sh/chart": "pyrra-0.2.0",
        "app.kubernetes.io/name": "pyrra",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "name": "internal",
          "port": 9443
        },
        {
          "name": "api",
          "port": 9444
        },
        {
          "name": "http",
          "port": 9099
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "pyrra",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-pyrra",
      "labels": {
        "helm.sh/chart": "pyrra-0.2.0",
        "app.kubernetes.io/name": "pyrra",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "pyrra",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "pyrra",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-pyrra",
          "securityContext": {},
          "containers": [
            {
              "name": "pyrra-kubernetes",
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "ghcr.io/pyrra-dev/pyrra:v0.4.0",
              "imagePullPolicy": "IfNotPresent",
              "args": [
                "kubernetes"
              ],
              "resources": {
                "limits": {
                  "cpu": "100m",
                  "memory": "30Mi"
                },
                "requests": {
                  "cpu": "100m",
                  "memory": "20Mi"
                }
              }
            },
            {
              "name": "pyrra",
              "securityContext": {},
              "image": "ghcr.io/pyrra-dev/pyrra:v0.4.0",
              "imagePullPolicy": "IfNotPresent",
              "args": [
                "api",
                "--prometheus-url=http://prometheus-operated.monitoring.svc.cluster.local:9090",
                "--api-url=http://localhost:9444"
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 9099
                }
              ]
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-pyrra-test-connection",
      "labels": {
        "helm.sh/chart": "pyrra-0.2.0",
        "app.kubernetes.io/name": "pyrra",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "wget",
          "image": "busybox",
          "command": [
            "wget"
          ],
          "args": [
            "release-name-pyrra:9099"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]