[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-asprom",
      "labels": {
        "app.kubernetes.io/name": "asprom",
        "helm.sh/chart": "asprom-2.0.0",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 80,
          "targetPort": 9145,
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "asprom",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-asprom",
      "labels": {
        "app.kubernetes.io/name": "asprom",
        "helm.sh/chart": "asprom-2.0.0",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "strategy": {
        "type": null
      },
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "asprom",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "asprom",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "imagePullSecrets": [
            {
              "name": null
            }
          ],
          "containers": [
            {
              "name": "asprom",
              "image": "okgolove/asprom:1.10.1",
              "imagePullPolicy": "Always",
              "command": [
                "/opt/asprom/asprom"
              ],
              "args": [
                "-listen",
                ":9145",
                "-node",
                "aerospike:3000"
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 9145,
                  "protocol": "TCP"
                }
              ],
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                },
                "initialDelaySeconds": 30,
                "periodSeconds": 10,
                "timeoutSeconds": 5,
                "successThreshold": 1,
                "failureThreshold": 6
              },
              "livenessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                },
                "initialDelaySeconds": 120,
                "periodSeconds": 10,
                "timeoutSeconds": 5,
                "successThreshold": 1,
                "failureThreshold": 6
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ]
        }
      }
    }
  }
]