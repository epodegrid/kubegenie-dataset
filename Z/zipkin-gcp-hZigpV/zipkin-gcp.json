[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-zipkin-gcp",
      "labels": {
        "app.kubernetes.io/name": "zipkin-gcp",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm",
        "helm.sh/chart": "zipkin-gcp-1.0.0"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 9411,
          "targetPort": "http",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "zipkin-gcp",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-zipkin-gcp",
      "labels": {
        "app.kubernetes.io/name": "zipkin-gcp",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm",
        "helm.sh/chart": "zipkin-gcp-1.0.0"
      }
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "zipkin-gcp",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "zipkin-gcp",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "zipkin-gcp",
              "image": "openzipkin/zipkin-gcp:0.15.2",
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "STORAGE_TYPE",
                  "value": "stackdriver"
                },
                {
                  "name": "STACKDRIVER_PROJECT_ID",
                  "value": ""
                }
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 9411,
                  "protocol": "TCP"
                }
              ]
            }
          ]
        }
      }
    }
  }
]