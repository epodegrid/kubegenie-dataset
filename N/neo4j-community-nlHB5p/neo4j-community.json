[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-neo4j-community-sa"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Secret",
    "metadata": {
      "name": "release-name-neo4j-community-secrets",
      "labels": {
        "app.kubernetes.io/name": "neo4j-community",
        "helm.sh/chart": "neo4j-community-1.2.5",
        "app.kubernetes.io/managed-by": "Helm",
        "app.kubernetes.io/instance": "release-name"
      }
    },
    "type": "Opaque",
    "data": {
      "neo4j-password": "MkEzcVFhajlweQ=="
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-neo4j-community",
      "labels": {
        "neo4j.com/bolt": "true",
        "neo4j.com/http": "true",
        "app.kubernetes.io/managed-by": "Helm",
        "app.kubernetes.io/instance": "release-name",
        "helm.sh/chart": "neo4j-community-1.2.5",
        "app.kubernetes.io/name": "neo4j-community"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "clusterIP": "None",
      "ports": [
        {
          "name": "tcp-http",
          "port": 7474,
          "targetPort": 7474
        },
        {
          "name": "tcp-bolt",
          "port": 7687,
          "targetPort": 7687
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "neo4j-community",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "name": "release-name-neo4j-community",
      "labels": {
        "helm.sh/chart": "neo4j-community-1.2.5",
        "app.kubernetes.io/name": "neo4j-community",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "4.2.4",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "podManagementPolicy": "Parallel",
      "serviceName": "release-name-neo4j-community",
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/instance": "release-name",
          "app.kubernetes.io/name": "neo4j-community"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/managed-by": "Helm",
            "app.kubernetes.io/instance": "release-name",
            "helm.sh/chart": "neo4j-community-1.2.5",
            "app.kubernetes.io/name": "neo4j-community"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-neo4j-community-sa",
          "terminationGracePeriodSeconds": 300,
          "containers": [
            {
              "name": "release-name-neo4j-community",
              "image": "neo4j:4.2.4",
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "AUTH_ENABLED",
                  "value": "true"
                },
                {
                  "name": "NEO4J_SECRETS_PASSWORD",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "release-name-neo4j-community-secrets",
                      "key": "neo4j-password"
                    }
                  }
                },
                {
                  "name": "dbms_jvm_additional",
                  "value": "-Dcom.sun.management.jmxremote=true -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Djava.rmi.server.hostname=localhost -Dcom.sun.management.jmxremote.local.only=false -Dcom.sun.management.jmxremote.rmi.port=1099 -Dcom.sun.management.jmxremote.port=1099"
                }
              ],
              "command": [
                "/bin/bash",
                "-c",
                "if [ \"${AUTH_ENABLED:-}\" == \"true\" ]; then\n  export NEO4J_AUTH=\"neo4j/${NEO4J_SECRETS_PASSWORD}\"\nelse\n  export NEO4J_AUTH=\"none\"\nfi\n# Once passed through to auth, unset this so Neo4j doesn't misinterpret it as config.\nunset NEO4J_SECRETS_PASSWORD\nexec /docker-entrypoint.sh \"neo4j\"\n"
              ],
              "ports": [
                {
                  "containerPort": 7474,
                  "name": "tcp-browser"
                },
                {
                  "containerPort": 7687,
                  "name": "tcp-bolt"
                }
              ],
              "volumeMounts": [
                {
                  "name": "datadir",
                  "mountPath": "/data"
                },
                {
                  "name": "plugins",
                  "mountPath": "/plugins"
                }
              ],
              "readinessProbe": {
                "failureThreshold": 3,
                "initialDelaySeconds": 60,
                "periodSeconds": 10,
                "tcpSocket": {
                  "port": 7687
                },
                "timeoutSeconds": 2
              },
              "livenessProbe": {
                "failureThreshold": 3,
                "initialDelaySeconds": 120,
                "periodSeconds": 10,
                "tcpSocket": {
                  "port": 7687
                },
                "timeoutSeconds": 2
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ],
          "securityContext": {},
          "volumes": [
            {
              "name": "plugins",
              "emptyDir": {}
            }
          ]
        }
      },
      "volumeClaimTemplates": [
        {
          "metadata": {
            "name": "datadir",
            "annotations": null
          },
          "spec": {
            "accessModes": [
              "ReadWriteOnce"
            ],
            "resources": {
              "requests": {
                "storage": "10Gi"
              }
            }
          }
        }
      ]
    }
  }
]