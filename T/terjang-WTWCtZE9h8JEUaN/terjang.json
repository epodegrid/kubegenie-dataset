[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "server"
    },
    "spec": {
      "selector": {
        "app": "server"
      },
      "ports": [
        {
          "protocol": "TCP",
          "name": "http",
          "port": 80,
          "targetPort": 9009
        }
      ]
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "labels": {
        "app": "server"
      },
      "name": "server"
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "server"
        }
      },
      "strategy": {
        "type": "Recreate"
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "server"
          }
        },
        "spec": {
          "containers": [
            {
              "image": "ghcr.io/andylibrian/terjang:latest",
              "imagePullPolicy": "Always",
              "name": "terjang",
              "args": [
                "server"
              ],
              "ports": [
                {
                  "containerPort": 9009,
                  "name": "http"
                }
              ],
              "readinessProbe": {
                "httpGet": {
                  "path": "/healthz",
                  "port": "http"
                }
              },
              "livenessProbe": {
                "tcpSocket": {
                  "port": "http"
                },
                "failureThreshold": 5,
                "periodSeconds": 10
              },
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memory": "1Gi"
                },
                "limits": null,
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": [
                    "all"
                  ]
                },
                "privileged": false,
                "runAsNonRoot": true,
                "runAsUser": 10001,
                "runAsGroup": 10001,
                "readOnlyRootFilesystem": true
              },
              "lifecycle": {
                "preStop": {
                  "exec": {
                    "command": [
                      "/bin/sh",
                      "-c",
                      "sleep 2"
                    ]
                  }
                }
              }
            }
          ],
          "affinity": {
            "podAntiAffinity": {
              "preferredDuringSchedulingIgnoredDuringExecution": [
                {
                  "weight": 100,
                  "podAffinityTerm": {
                    "labelSelector": {
                      "matchExpressions": [
                        {
                          "key": "app",
                          "operator": "In",
                          "values": [
                            "worker",
                            "server"
                          ]
                        }
                      ]
                    },
                    "topologyKey": "kubernetes.io/hostname"
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "labels": {
        "app": "worker"
      },
      "name": "worker"
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "worker"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "worker"
          }
        },
        "spec": {
          "containers": [
            {
              "image": "ghcr.io/andylibrian/terjang:latest",
              "name": "terjang",
              "imagePullPolicy": "Always",
              "args": [
                "worker",
                "--host",
                "server",
                "--port",
                "80"
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memory": "1Gi"
                },
                "limits": null,
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": [
                    "all"
                  ]
                },
                "privileged": false,
                "runAsNonRoot": true,
                "runAsUser": 10001,
                "runAsGroup": 10001,
                "readOnlyRootFilesystem": true
              },
              "lifecycle": {
                "preStop": {
                  "exec": {
                    "command": [
                      "/bin/sh",
                      "-c",
                      "sleep 2"
                    ]
                  }
                }
              }
            }
          ],
          "automountServiceAccountToken": false,
          "affinity": {
            "podAntiAffinity": {
              "preferredDuringSchedulingIgnoredDuringExecution": [
                {
                  "weight": 100,
                  "podAffinityTerm": {
                    "labelSelector": {
                      "matchExpressions": [
                        {
                          "key": "app",
                          "operator": "In",
                          "values": [
                            "worker",
                            "server"
                          ]
                        }
                      ]
                    },
                    "topologyKey": "kubernetes.io/hostname"
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
]