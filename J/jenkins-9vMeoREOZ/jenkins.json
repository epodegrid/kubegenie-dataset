[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "jenkins"
    },
    "spec": {
      "type": "NodePort",
      "ports": [
        {
          "port": 8080,
          "targetPort": 8080,
          "nodePort": 30000
        }
      ],
      "selector": {
        "app": "jenkins"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "jenkins"
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "jenkins"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "jenkins"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "jenkins",
              "image": "jenkins/jenkins:lts",
              "ports": [
                {
                  "name": "http-port",
                  "containerPort": 8080
                },
                {
                  "name": "jnlp-port",
                  "containerPort": 31000
                }
              ],
              "volumeMounts": [
                {
                  "name": "jenkins-vol",
                  "mountPath": "/var/jenkins_vol"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "jenkins-vol",
              "emptyDir": {}
            }
          ]
        }
      }
    }
  }
]