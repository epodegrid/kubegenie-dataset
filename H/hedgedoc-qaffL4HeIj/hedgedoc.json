  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-hedgedoc",
      "labels": {
        "app.kubernetes.io/component": "Service",
        "app.kubernetes.io/name": "hedgedoc",
        "helm.sh/chart": "hedgedoc-0.1.11",
        "app.kubernetes.io/managed-by": "Helm",
        "app.kubernetes.io/instance": "release-name",
