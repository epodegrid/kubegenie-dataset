[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "hzero-iam",
      "labels": {
        "choerodon.io/release": "release-name"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 8030,
          "targetPort": "http",
          "protocol": "TCP",
          "name": "http"
        },
        {
          "port": 8031,
          "targetPort": "actuator",
          "protocol": "TCP",
          "name": "actuator"
        }
      ],
      "selector": {
        "choerodon.io/release": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name",
      "labels": {
        "choerodon.io/release": "release-name"
      }
    },
    "spec": {
      "strategy": {
        "type": "RollingUpdate",
        "rollingUpdate": {
          "maxSurge": "100%",
          "maxUnavailable": 0
        }
      },
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "choerodon.io/release": "release-name"
        }
      },
      "template": {
        "metadata": {
          "annotations": {
            "choerodon.io/metrics-group": "spring-boot",
            "choerodon.io/metrics-path": "/actuator/prometheus"
          },
          "labels": {
            "choerodon.io/version": "0.23.5",
            "choerodon.io/service": "hzero-iam",
            "choerodon.io/metrics-port": "8031",
            "choerodon.io/release": "release-name"
          }
        },
        "spec": {
          "initContainers": [
            {
              "name": "skywalking-agent",
              "image": "registry.cn-shanghai.aliyuncs.com/c7n/skywalking-agent:6.6.0",
              "imagePullPolicy": "IfNotPresent",
              "command": [
                "sh",
                "-c",
                "cp -rfp /skywalking/agent/* /agent"
              ],
              "volumeMounts": [
                {
                  "name": "skywalking-agent",
                  "mountPath": "/agent"
                }
              ]
            }
          ],
          "containers": [
            {
              "name": "release-name",
              "image": "registry.cn-shanghai.aliyuncs.com/c7n/hzero-iam:0.23.5",
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "CHOERODON_GATEWAY_URL",
                  "value": "http://api.example.com"
                },
                {
                  "name": "EUREKA_DEFAULT_ZONE",
                  "value": "http://register-server:8000/eureka/"
                },
                {
                  "name": "EUREKA_INSTANCE_PREFER_IP_ADDRESS",
                  "value": "true"
                },
                {
                  "name": "HYSTRIX_COMMAND_TIMEOUT_IN_MILLISECONDS",
                  "value": "40000"
                },
                {
                  "name": "HZERO_CAPTCHA_TEST_DISABLE",
                  "value": "false"
                },
                {
                  "name": "HZERO_ENABLE_DATA_PERMISSION",
                  "value": "true"
                },
                {
                  "name": "HZERO_IMPORT_INIT_TABLE",
                  "value": "false"
                },
                {
                  "name": "HZERO_PERMISSION_CLEAN_PERMISSION",
                  "value": "false"
                },
                {
                  "name": "HZERO_PERMISSION_PARSE_PERMISSION",
                  "value": "true"
                },
                {
                  "name": "HZERO_PERMISSION_SKIP_PARSE_SERVICES",
                  "value": "register,gateway,oauth,swagger"
                },
                {
                  "name": "HZERO_RESOURCE_PATTERN",
                  "value": "/v1/*,/hzero/*,/iam/v1/*,/iam/hzero/*,/choerodon/*"
                },
                {
                  "name": "HZERO_START_INIT_CLIENT",
                  "value": "false"
                },
                {
                  "name": "HZERO_START_INIT_FIELD_PERMISSION",
                  "value": "true"
                },
                {
                  "name": "HZERO_START_INIT_LDAP",
                  "value": "false"
                },
                {
                  "name": "HZERO_START_INIT_OPEN_LOGIN_WAY",
                  "value": "false"
                },
                {
                  "name": "HZERO_START_INIT_PASSWORD_POPLICY",
                  "value": "false"
                },
                {
                  "name": "HZERO_START_INIT_USER",
                  "value": "false"
                },
                {
                  "name": "JAVA_OPTS",
                  "value": "-Xms1024m -Xmx1536m"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "MANAGEMENT_SERVER_PORT",
                  "value": "8031"
                },
                {
                  "name": "RIBBON_CONNECT_TIMEOUT",
                  "value": "3000"
                },
                {
                  "name": "RIBBON_READ_TIMEOUT",
                  "value": "30000"
                },
                {
                  "name": "SERVER_PORT",
                  "value": "8030"
                },
                {
                  "name": "SERVER_UNDERTOW_BUFFER_SIZE",
                  "value": "1024"
                },
                {
                  "name": "SERVER_UNDERTOW_IO_THREADS",
                  "value": "4"
                },
                {
                  "name": "SERVER_UNDERTOW_WORKER_THREADS",
                  "value": "128"
                },
                {
                  "name": "SPRING_DATASOURCE_CONNECTION_TIMEOUT",
                  "value": "30000"
                },
                {
                  "name": "SPRING_DATASOURCE_MAXIMUM_POOL_SIZE",
                  "value": "200"
                },
                {
                  "name": "SPRING_DATASOURCE_MINIMUM_IDLE",
                  "value": "20"
                },
                {
                  "name": "SPRING_DATASOURCE_PASSWORD",
                  "value": "password"
                },
                {
                  "name": "SPRING_DATASOURCE_URL",
                  "value": "jdbc:mysql://localhost:3306/iam_service?useUnicode=true&characterEncoding=utf-8&useSSL=false&useInformationSchema=true&remarks=true&serverTimezone=Asia/Shanghai"
                },
                {
                  "name": "SPRING_DATASOURCE_USERNAME",
                  "value": "choerodon"
                },
                {
                  "name": "SPRING_REDIS_DATABASE",
                  "value": "1"
                },
                {
                  "name": "SPRING_REDIS_HOST",
                  "value": "localhost"
                },
                {
                  "name": "SPRING_REDIS_PORT",
                  "value": "6379"
                },
                {
                  "name": "TENANT_INIT_ASPECT",
                  "value": "false"
                }
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 8030,
                  "protocol": "TCP"
                },
                {
                  "name": "actuator",
                  "containerPort": 8031,
                  "protocol": "TCP"
                }
              ],
              "resources": {
                "limits": {
                  "memory": "2Gi"
                },
                "requests": {
                  "memory": "2Gi"
                },
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "volumeMounts": [
                {
                  "name": "skywalking-agent",
                  "mountPath": "/agent"
                }
              ],
              "livenessProbe": {
                "initialDelaySeconds": 180,
                "periodSeconds": 30,
                "timeoutSeconds": 3,
                "successThreshold": 1,
                "failureThreshold": 3,
                "exec": {
                  "command": [
                    "/bin/sh",
                    "-c",
                    "nc -z localhost 8030 && curl -s --fail localhost:8031/actuator/health\n"
                  ]
                }
              },
              "readinessProbe": {
                "initialDelaySeconds": 5,
                "periodSeconds": 15,
                "timeoutSeconds": 3,
                "successThreshold": 1,
                "failureThreshold": 3,
                "exec": {
                  "command": [
                    "/bin/sh",
                    "-c",
                    "nc -z localhost 8030 && curl -s --fail localhost:8031/actuator/health\n"
                  ]
                }
              }
            }
          ],
          "volumes": [
            {
              "name": "skywalking-agent",
              "emptyDir": {}
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
      "name": "release-name-init-db",
      "annotations": {
        "helm.sh/hook-weight": "1",
        "helm.sh/hook": "pre-install,pre-upgrade",
        "helm.sh/hook-delete-policy": "before-hook-creation"
      },
      "labels": {
        "choerodon.io/release": "release-name"
      }
    },
    "spec": {
      "backoffLimit": 1,
      "activeDeadlineSeconds": 1200,
      "template": {
        "metadata": {
          "name": "release-name-init-db"
        },
        "spec": {
          "initContainers": [
            {
              "command": [
                "sh",
                "-c",
                "cp -rfp /var/choerodon/* /tools"
              ],
              "image": "registry.cn-shanghai.aliyuncs.com/c7n/dbtool:0.7.1",
              "imagePullPolicy": "IfNotPresent",
              "name": "tools",
              "volumeMounts": [
                {
                  "mountPath": "/tools",
                  "name": "tools-jar"
                }
              ]
            }
          ],
          "containers": [
            {
              "name": "release-name-init-db",
              "image": "registry.cn-shanghai.aliyuncs.com/c7n/hzero-iam:0.23.5",
              "command": [
                "/bin/sh",
                "-c",
                "java -Ddata.init=true -Dspring.datasource.url=\"jdbc:mysql://localhost:3306/?useUnicode=true&characterEncoding=utf-8&useSSL=false&useInformationSchema=true&remarks=true&serverTimezone=Asia/Shanghai\" -Dspring.datasource.username=username -Dspring.datasource.password=password -Dspring.datasource.driver-class-name=com.mysql.jdbc.Driver -Dinstaller.jarPath=/choerodon/hzero-iam.jar -Dlogging.level.root=info -Ddata.version=1.3.0.RELEASE -Dinstaller.mapping=script/db/service-mapping.xml -jar /var/choerodon/choerodon-tool-liquibase.jar;\n"
              ],
              "volumeMounts": [
                {
                  "mountPath": "/var/choerodon",
                  "name": "tools-jar"
                }
              ]
            }
          ],
          "restartPolicy": "Never",
          "volumes": [
            {
              "emptyDir": {},
              "name": "tools-jar"
            }
          ]
        }
      }
    }
  }
]