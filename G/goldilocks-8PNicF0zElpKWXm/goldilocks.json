        "app.kubernetes.io/managed-by": "Helm",
        "app.kubernetes.io/component": "dashboard"
      }
    },
    "spec": {
      "replicas": 2,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "goldilocks",
          "app.kubernetes.io/instance": "release-name",
          "app.kubernetes.io/component": "dashboard"
        }
      },
      "template": {
