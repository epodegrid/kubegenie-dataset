    "kind": "ConfigMap",
    "metadata": {
      "name": "release-name-spark-thrift-server-configmapsparkconf",
      "labels": {
        "helm.sh/chart": "spark-thrift-server-3.0.12",
        "app.kubernetes.io/name": "spark-thrift-server",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "data": {
      "spark-defaults.conf": "spark.dynamicAllocation.enabled true\nspark.dynamicAllocation.executorAllocationRatio 1\nspark.dynamicAllocation.initialExecutors 1\nspark.dynamicAllocation.maxExecutors 10\nspark.dynamicAllocation.minExecutors 1\nspark.dynamicAllocation.shuffleTracking.enabled true\nspark.kubernetes.authenticate.driver.serviceAccountName release-name-spark-thrift-server\nspark.kubernetes.container.image inseefrlab/jupyter-datascience:py3.9.7-spark3.2.0\nspark.kubernetes.driver.pod.name release-name-spark-thrift-server-0\nspark.kubernetes.namespace default\nspark.master k8s://https://kubernetes.default.svc:443\n"
    }
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "RoleBinding",
    "metadata": {
      "name": "release-name-spark-thrift-server",
      "labels": {
        "helm.sh/chart": "spark-thrift-server-3.0.12",
        "app.kubernetes.io/name": "spark-thrift-server",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "roleRef": {
      "apiGroup": "rbac.authorization.k8s.io",
      "kind": "ClusterRole",
      "name": "edit"
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "release-name-spark-thrift-server",
        "namespace": "default"
      }
    ]
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-spark-thrift-server",
      "labels": {
        "helm.sh/chart": "spark-thrift-server-3.0.12",
        "app.kubernetes.io/name": "spark-thrift-server",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "clusterIP": "None",
      "ports": [
        {
          "port": 10000,
          "targetPort": "thrift",
          "protocol": "TCP",
          "name": "thrift"
        },
        {
          "port": 4040,
          "targetPort": "sparkui",
          "protocol": "TCP",
          "name": "sparkui"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "spark-thrift-server",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "name": "release-name-spark-thrift-server",
      "labels": {
        "helm.sh/chart": "spark-thrift-server-3.0.12",
        "app.kubernetes.io/name": "spark-thrift-server",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "serviceName": "release-name-spark-thrift-server",
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "spark-thrift-server",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "spark-thrift-server",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-spark-thrift-server",
          "securityContext": {},
          "subdomain": "release-name-spark-thrift-server",
          "hostname": "thrift",
          "containers": [
            {
              "name": "spark-thrift-server",
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "inseefrlab/jupyter-datascience:py3.9.7-spark3.2.0",
              "command": [
                "/bin/sh",
                "-c"
              ],
              "args": [
                "/data/onyxia-init.sh $SPARK_HOME/sbin/start-thriftserver.sh"
              ],
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "SPARK_NO_DAEMONIZE",
                  "value": "true"
                }
              ],
              "envFrom": [
                {
                  "configMapRef": {
                    "name": "release-name-spark-thrift-server-configmaps3"
                  }
                }
              ],
              "ports": [
                {
                  "name": "thrift",
                  "containerPort": 10000,
                  "protocol": "TCP"
                },
                {
                  "name": "sparkui",
                  "containerPort": 4040,
                  "protocol": "TCP"
                }
              ],
              "readinessProbe": {
                "tcpSocket": {
                  "port": 10000
                },
                "initialDelaySeconds": 5,
                "periodSeconds": 10
              },
              "livenessProbe": {
                "tcpSocket": {
                  "port": 10000
                },
                "initialDelaySeconds": 15,
                "periodSeconds": 20
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "volumeMounts": [
                {
                  "mountPath": "/data",
                  "name": "release-name-spark-thrift-server-data"
                },
                {
                  "name": "config-sparkconf",
                  "mountPath": "/opt/spark/conf/spark-defaults.conf",
                  "subPath": "spark-defaults.conf"
                },
                {
                  "mountPath": "/opt/hadoop/etc/hadoop/core-site.xml",
                  "subPath": "core-site.xml",
                  "name": "config-coresite"
                },
                {
                  "name": "hive-config",
                  "mountPath": "/opt/hive/conf/hive-site.xml",
                  "subPath": "hive-site.xml"
                }
              ]
            }
          ],
          "initContainers": [
            {
              "name": "standard-init",
              "image": "busybox",
              "command": [
                "/bin/sh",
                "-c"
              ],
              "args": [
                "wget -O /data/onyxia-init.sh https://git.lab.sspcloud.fr/innovation/plateforme-onyxia/services-ressources/-/raw/master/onyxia-init.sh && chmod +x /data/onyxia-init.sh"
              ],
              "volumeMounts": [
                {
                  "mountPath": "/data",
                  "name": "release-name-spark-thrift-server-data"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "release-name-spark-thrift-server-data",
              "emptyDir": {}
            },
            {
              "name": "config-coresite",
              "configMap": {
                "name": "release-name-spark-thrift-server-configmapcoresite"
              }
            },
            {
              "name": "config-sparkconf",
              "configMap": {
                "name": "release-name-spark-thrift-server-configmapsparkconf"
              }
            },
            {
              "name": "hive-config",
              "configMap": {
                "name": "release-name-spark-thrift-server-configmaphive"
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "networking.k8s.io/v1",
    "kind": "Ingress",
    "metadata": {
      "name": "release-name-spark-thrift-server-ui",
      "labels": {
        "helm.sh/chart": "spark-thrift-server-3.0.12",
        "app.kubernetes.io/name": "spark-thrift-server",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "kubernetes.io/ingress.class": "nginx",
        "nginx.ingress.kubernetes.io/whitelist-source-range": "0.0.0.0/0"
      }
    },
    "spec": {
      "tls": [
        {
          "hosts": [
            "chart-example.local"
          ]
        }
      ],
      "rules": [
        {
          "host": "chart-example.local",
          "http": {
            "paths": [
              {
                "path": "/",
                "pathType": "Prefix",
                "backend": {
                  "service": {
                    "name": "release-name-spark-thrift-server",
                    "port": {
                      "number": 4040
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    }
  }
]