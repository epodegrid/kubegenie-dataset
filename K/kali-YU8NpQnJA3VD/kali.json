[
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-kali",
      "labels": {
        "app": "kali"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "kali",
          "image": "kalilinux/kali-rolling:amd64",
          "args": [
            "sh",
            "-c",
            "apt update && touch /tmp/healthy && sleep 365d"
          ],
          "imagePullPolicy": "IfNotPresent",
          "startupProbe": {
            "exec": {
              "command": [
                "cat",
                "/tmp/healthy"
              ]
            },
            "failureThreshold": 30,
            "periodSeconds": 10
          }
        }
      ],
      "restartPolicy": "Always"
    }
  }
]